<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shipfindpeople.app.fragment.NotificationFragment">

    <com.affiliate.app.widget.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/shadow_view"
        android:layout_below="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_shadow_height"
        android:background="@drawable/shape_tool_bar_shadow"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_marginTop="@dimen/toolbar_shadow_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shadow_view">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
